{{#if addNewCity}}
<h1>New City</h1>
<div>
  <form>
    <div class="form-group">
      <label for="name">Name</label>
      {{input value=name id="name"}}
    </div>

    <div class="form-group" id="attractions-div">
      <label for="attractions">Attractions</label>
      {{input value=attractions class="attractions" multiple=""}}
    </div>
    <button {{action 'appendInput'}}>Add Another Attraction</button>

    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=image id="image"}}
    </div>

    <button {{action 'save1'}}>Save</button>
  </form>
</div>
{{else}}
  <button {{action 'cityFormShow'}}>New City</button>
{{/if}}
